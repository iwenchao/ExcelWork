<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.MainFragment">


    <TextView
        android:id="@+id/btnInputFile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@color/color_live_dialog_title"
        android:padding="10dp"
        android:text="输入文件名"
        android:textColor="@color/color_red_FF4373"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etInputFile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="请输入文件名"
        android:padding="10dp"
        android:textColor="@color/color_red_FF4373"
        android:textColorHint="@color/gray8"
        app:layout_constraintTop_toBottomOf="@+id/btnInputFile" />

    <TextView
        android:id="@+id/tvTips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:paddingLeft="10dp"
        android:text="注：请将文件存放至手机的Download目录下。文件名包括文件扩展名，且最好为全英文"
        android:textColor="@color/gray8"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etInputFile" />

    <TextView
        android:id="@+id/tvInputFile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@color/color_live_dialog_title"
        android:padding="10dp"
        android:text="开始进行计算"
        android:textColor="@color/color_red_FF4373"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTips" />


    <TextView
        android:id="@+id/tvConsole"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:lineHeight="17dp"
        android:padding="10dp"
        android:text="控制台信息:"
        android:textColor="@color/green_8fc320"
        app:layout_constraintBottom_toBottomOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
